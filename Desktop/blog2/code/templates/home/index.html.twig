{% extends 'base.html.twig' %} {% block title %}{% endblock %} {% block body %}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>A.C.O.D</title>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script
      src="https://use.fontawesome.com/releases/v6.3.0/js/all.js"
      crossorigin="anonymous"
    ></script>
    <!-- Google fonts-->
    <link
      href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800"
      rel="stylesheet"
      type="text/css"
    />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet" />
  </head>
  <body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
      <div class="container px-4 px-lg-5">
        <a class="navbar-brand" href="index.html">A.C.O.D</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarResponsive"
          aria-controls="navbarResponsive"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          Menu
          <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ms-auto py-4 py-lg-0">
            <li class="nav-item">
              <a
                class="nav-link px-lg-3 py-3 py-lg-4"
                href="{{ path('app_home') }}"
                >Accueil</a
              >
            </li>

            <li class="nav-item">
              <a class="nav-link px-lg-3 py-3 py-lg-4" href="post.html"
                >Publication</a
              >
            </li>
            <li class="nav-item">
              <a
                class="nav-link px-lg-3 py-3 py-lg-4"
                aria-current="page"
                href="{{ path('app_legals') }}"
                >A propos</a
              >
            </li>
            <li class="nav-item">
              <a
                class="nav-link px-lg-3 py-3 py-lg-4"
                href="{{ path('app_contact') }}"
                >Contact</a
              >
            </li>
            {% if not app.user %}
            <li class="nav-item">
              <a
                class="nav-link px-lg-3 py-3 py-lg-4"
                href="{{ path('app_login') }}"
                >Se connecter</a
              >
            </li>
            <li class="nav-item">
              <a
                class="nav-link px-lg-3 py-3 py-lg-4"
                href="{{ path('app_register') }}"
                >S'inscrire</a
              >
            </li>
            {% endif %} {% if app.user and is_granted('ROLE_ADMIN') %}
            <li class="nav-item dropdown">
              <a
                class="nav-link px-lg-3 py-3 py-lg-4"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                Administration
              </a>
              <ul class="dropdown-menu">
                <li>
                  <a
                    class="nav-link px-lg-3 py-3 py-lg-4"
                    href="{{ path('app_admin_article_index') }}"
                    >Derniers articles</a
                  >
                </li>
                <li>
                  <a
                    class="nav-link px-lg-3 py-3 py-lg-4"
                    href="{{ path('app_admin_category_index') }}"
                    >Catégories</a
                  >
                </li>
                <li>
                  <hr class="dropdown-divider" />
                </li>
                <li>
                  <a
                    class="nav-link px-lg-3 py-3 py-lg-4"
                    href="{{ path('app_admin_user_index') }}"
                    >Utilisateurs</a
                  >
                </li>
              </ul>
            </li>
            {% endif %} {% if app.user %}
            <li class="nav-item">
              <a
                class="nav-link px-lg-3 py-3 py-lg-4"
                href="{{ path('app_profile_edit') }}"
                >Mon profil</a
              >
            </li>

            <li class="nav-item">
              <a
                class="nav-link px-lg-3 py-3 py-lg-4"
                href="{{ path('app_logout') }}"
                >Se déconnecter</a
              >
            </li>
            {% endif %}
          </ul>
        </div>
      </div>
    </nav>

    <!-- Page Header-->
    <header
      class="masthead"
      style="background-image: url('/images/call-of-duty.jpg')"
    >
      <img
        src="/images/call-of-duty.jpg"
        class="img-fluid"
        alt="Call of Duty"
      />

      <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <div class="site-heading">
              <h1>A.C.O.D</h1>
              <span class="subheading"
                >Le blog créer pour les fans de Call of Duty antilles</span
              >
            </div>
          </div>
        </div>
      </div>
    </header>
    <!-- Main Content-->
    <div class="container px-4 px-lg-5">
      <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
          <!-- Post preview-->
          <div class="post-preview">
            <a href="post.html">
              <h2 class="post-title">Qu'elle est la nouvelle meta ?</h2>
              <h3 class="post-subtitle">clique ici</h3>
            </a>
            <p class="post-meta">
              Poster par milo972
              <a href="#!">Ma méta preferer les gars !</a>
              le 24 septembre, 2023
            </p>
          </div>
          <!-- Divider-->
          <hr class="my-4" />
          <!-- Post preview-->
          <div class="post-preview">
            <a href="post.html"
              ><h2 class="post-title">
                Beaucoup trop de cheater sur ce jeux !!
              </h2></a
            >
            <p class="post-meta">
              Poster par milo972
              <a href="#!">Ricochet ne sert a rien </a>
              le 18 septembre, 2023
            </p>
          </div>
          <!-- Divider-->
          <hr class="my-4" />
          <!-- Post preview-->
          <div class="post-preview">
            <a href="post.html">
              <h2 class="post-title">Tu cherche du monde avec qui jouer ?</h2>
              <h3 class="post-subtitle">
                Rejoins nous sur whatsapp ou Instagram
              </h3>
            </a>
            <p class="post-meta">
              Poster par milo972
              <a href="#!">Ralé kow</a>
              le 24 aout, 2023
            </p>
          </div>
          <!-- Divider-->
          <hr class="my-4" />
          <!-- Post preview-->
          <div class="post-preview">
            <a href="post.html">
              <h2 class="post-title">
                Le nouveau call of Duty en vaut il la peine ?
              </h2>
              <h3 class="post-subtitle">
                Apres la deception du dernier opus difficile de faire confiance
                à Activision
              </h3>
            </a>
            <p class="post-meta">Poster par milo972 on 8 juillet, 2023</p>
          </div>
          <!-- Divider-->
          <hr class="my-4" />
          <!-- Pager-->
          <div class="d-flex justify-content-end mb-4">
            <a class="btn btn-primary text-uppercase" href="#!"
              >Autres publications →</a
            >
          </div>
        </div>
      </div>
    </div>
    <!-- Footer-->
    <footer class="border-top">
      <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <ul class="list-inline text-center">
              <li class="list-inline-item">
                <a href="#!">
                  <span class="fa-stack fa-lg">
                    <i class="fas fa-circle fa-stack-2x"></i>
                    <i class="fab fa-twitter fa-stack-1x fa-inverse"></i>
                  </span>
                </a>
              </li>
              <li class="list-inline-item">
                <a href="#!">
                  <span class="fa-stack fa-lg">
                    <i class="fas fa-circle fa-stack-2x"></i>
                    <i class="fab fa-facebook-f fa-stack-1x fa-inverse"></i>
                  </span>
                </a>
              </li>
              <li class="list-inline-item">
                <a href="#!">
                  <span class="fa-stack fa-lg">
                    <i class="fas fa-circle fa-stack-2x"></i>
                    <i class="fab fa-github fa-stack-1x fa-inverse"></i>
                  </span>
                </a>
              </li>
            </ul>
            <div class="small text-center text-muted fst-italic">
              Copyright &copy; A.C.O.D 2023
            </div>
          </div>
        </div>
      </div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>
  </body>
</html>

{% endblock %}
